# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=datawarehouse
DB_CONNECTION_STRING=postgresql+psycopg2://postgres:postgres@postgres:5432/datawarehouse

# Spark Configuration
SPARK_URL=spark://spark-master:7077

# S3 Host Configuration
S3_PROTOCOL=http
S3_HOST=minio
S3_EXTERNAL_HOST=localhost
