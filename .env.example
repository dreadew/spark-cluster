S3_PROD_BUCKET=prod
S3_REGION=us-east-1

# S3 Credentials
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin

# Trino Configuration
TRINO_CORES=2
TRINO_MEMORY=4GB

# Trino Catalog Configuration
